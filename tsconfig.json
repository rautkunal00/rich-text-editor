{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "include": [
    "src/**/*",
    "vite.config.ts"
  ]
}